{{!-- Ocultar Mostrar Contraseña --}}

<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {

    const hideShowPassWord = document.getElementById("MostrarOcultarPassword"),
      password = document.getElementById("txtpassword");

    hideShowPassWord.addEventListener("click", () => {
      if (password.type === "password") {

        hideShowPassWord.innerHTML = `<i class="fas fa-eye-slash"></i>`;
        password.type = "text";
      } else {
        password.type = "password";
        var Estado = hideShowPassWord.innerHTML = `<i class='fas fa-eye'></i>`;
      }
    });
  });
</script>

